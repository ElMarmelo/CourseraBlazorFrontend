@page "/event-info/{Id:int}"
@using UdemyEventEase.Models
@using UdemyEventEase.Services
@inject EventService EventService
@inject UserSessionService SessionService

@if (_currentEvent == null)
{
    <div class="container mt-5 text-center">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-2">Loading event details...</p>
    </div>
}
else
{
    <div class="container mt-4">
        <NavLink class="btn btn-link text-decoration-none ps-0 mb-3" href="/">‚Üê Back to Events</NavLink>
        
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white p-4">
                <h2 class="mb-0">@_currentEvent.EventTitle</h2>
            </div>
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-md-7 border-end">
                        <h5 class="text-uppercase text-muted small fw-bold">Event Details</h5>
                        <p class="fs-5 mb-2"><i class="bi bi-geo-alt-fill text-danger"></i> @_currentEvent.Location</p>
                        <p class="fs-5"><i class="bi bi-clock-fill text-primary"></i> @_currentEvent.EventDate.ToString("f")</p>
                        
                        <div class="mt-4">
                            @if (SessionService.CurrentUser != null)
                            {
                                @if (_currentEvent.Attendees.Contains(SessionService.CurrentUser.Name))
                                {
                                    <div class="alert alert-success d-inline-block">
                                        <i class="bi bi-check-circle-fill"></i> You're on the list!
                                    </div>
                                }
                                else
                                {
                                    <button class="btn btn-primary btn-lg px-5" @onclick="MarkAsAttending">Attend This Event</button>
                                }
                            }
                            else
                            {
                                <div class="alert alert-light border">
                                    Please <a href="registration" class="fw-bold">register</a> to join this event.
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-5 ps-md-4">
                        <h5 class="text-uppercase text-muted small fw-bold mb-3">Attendees (@_currentEvent.Attendees.Count)</h5>
                        @if (_currentEvent.Attendees.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var attendee in _currentEvent.Attendees)
                                {
                                    <li class="list-group-item ps-0">
                                        <i class="bi bi-person-circle me-2"></i> @attendee
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted italic">No attendees yet.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }
    private EventModel? _currentEvent;

    protected override async Task OnInitializedAsync()
    {
        _currentEvent = EventService.GetEventById(Id);
        
        if (SessionService.CurrentUser == null)
        {
            await SessionService.LoadSession();
        }
    }

    private void MarkAsAttending()
    {
        if (_currentEvent != null && SessionService.CurrentUser != null)
        {
            EventService.RegisterAttendance(_currentEvent.EventId, SessionService.CurrentUser.Name);

        }
    }
}